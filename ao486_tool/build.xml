<?xml version="1.0" encoding="UTF-8"?>
<project name="ao486_tool" default="jar" basedir=".">
  <description>Builds, tests, and runs the project ao486_tool.</description>

  <target name="clean">
    <delete dir="build"/>
    <delete dir="dist"/>
  </target>

  <target name="compile">
    <mkdir dir="build"/>
    <javac srcdir="src" destdir="build" includeantruntime="false"/>
  </target>

  <target name="jar" depends="compile">
    <mkdir dir="dist"/>
    <jar destfile="dist/ao486_tool.jar" basedir="build">
      <manifest>
        <attribute name="Main-Class" value="ao486.SDGenerator"/>
      </manifest>
    </jar>
  </target>
</project>
